<UserControl x:Class="ProcessMonitor.Views.ProcessDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Margin="5">
            <Button Content="Zabij Proces" Command="{Binding KillCommand}" 
                    Background="DarkRed" Foreground="White" Margin="0,0,10,0"/>
            <Button Content="Ustaw Wysoki Priorytet" Command="{Binding BoostPriorityCommand}"/>
            <Button Content="Śledź Pamięć" Command="{Binding DataContext.TrackCommand, RelativeSource={RelativeSource AncestorType=Window}}" Margin="10,0,0,0"/>
        </StackPanel>

        <TabControl Grid.Row="1" Margin="5">
            <TabItem Header="Moduły (.dll)">
                <ListBox ItemsSource="{Binding SelectedProcessModules}"/>
            </TabItem>
            <TabItem Header="Wątki">
                <ListBox ItemsSource="{Binding SelectedProcessThreads}"/>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>